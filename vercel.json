{
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python",
        "config": {
          "runtime": "python3.12"
        }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "app.py" }
    ],
    "buildCommand": "pip install --upgrade pip && pip install -r requirements.txt"
  }
  